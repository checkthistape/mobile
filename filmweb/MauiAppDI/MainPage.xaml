                <HorizontalStackLayout HorizontalOptions="Center">
                    <CollectionView x:Name="pagesHor" SelectionMode="Single" HorizontalOptions="Center" SelectionChanged="NextPageMain">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" />
                            
                        </CollectionView.ItemsLayout>

                        <CollectionView.GestureRecognizers>
                            <TapGestureRecognizer Tapped="NextPageMain"></TapGestureRecognizer>
                        </CollectionView.GestureRecognizers>

                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <HorizontalStackLayout HorizontalOptions="End" VerticalOptions="Center" WidthRequest="30" HeightRequest="30">
                                    <Label Text="{Binding PageId}"  WidthRequest="10" HeightRequest="30" VerticalOptions="Center" FontSize="20">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="NextPageMain"></TapGestureRecognizer>
                                        </Label.GestureRecognizers>
